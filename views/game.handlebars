<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>MonsTerra Game</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.0/css/bulma.min.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet"
    href="/assets/style.css">
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="https://bulma.io">
          <img src="https://bulma.io/images/bulma-logo.png" width="112" height="28">
        </a>
          </div>
        </div>
    
        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
            
              <a class="button is-light">
                Log Out
              </a>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <video autoplay muted loop id="bgVideo">
      <source src="./public/assets/images/4K_5.mp4" type="video/mp4">
    </video>
  

    <!-- game console -->
    <div class="container is-overlay is-mobile" id="game-screen">
      <div class="overlay">
        <img src="/assets/images/MonsterraConsole.png" width=100% height=100% class="console-overlay">
        
      </div> 
      <img src="/assets/images/sky.png" width="900" height="700" alt="sky" class="sky">
      <!--Div for area buttons-->
  
      <div class="columns is-multiline is-overlay is-mobile" id="buttons">
        <div class="column is-half">
          <button class="title is-4" id="grass">Grass</button>
        </div>
        <div class="column is-half">
          <button class="title is-4" id="water">Water</button>
        </div>
        <div class="column is-half">
          <button class="title is-4" id="rocks">Rocks</button>
        </div>
        <div class="column is-half">
          <button class="title is-4" id="forest">Forest</button>
        </div>
  
   
        
     <!--Div for inventory button-->
     <div class="columns is-centered is-overlay is-mobile" id="inventorysection">
      <button class="title is-4" id="inventorybtn">Inventory</button>
      </div>
    </div>   

    <!--modal-->
      
    <div class="modal">
      <div class="modal-background"></div>
      <div class="modal-content">
        <p>Hello</p>
        <!-- Any other Bulma elements you want -->
      </div>
      <button class="modal-close is-large" aria-label="close">Ok</button>
    </div>
     
   
    <script>
        $(document).ready(function(){
        $("#inventorybtn").on("click",function(){
          console.log("click");
         
          const url = "./inventory.html";
            $(location).attr('href',url);
        });
        });
        $("#grass").click(function() {
  $(".modal").addClass("is-active");  
});
$(".modal-close").click(function() {
   $(".modal").removeClass("is-active");
});
$("#water").click(function() {
  $(".modal").addClass("is-active");  
});
$(".modal-close").click(function() {
   $(".modal").removeClass("is-active");
});
$("#rocks").click(function() {
  $(".modal").addClass("is-active");  
});
$(".modal-close").click(function() {
   $(".modal").removeClass("is-active");
});
$("#forest").click(function() {
  $(".modal").addClass("is-active");  
});
$(".modal-close").click(function() {
   $(".modal").removeClass("is-active");
});
        </script>
    
  </body>
</html>